<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sword"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="7"
    tools:ignore="ExtraText">

    <EditText
        android:gravity="center"
        android:id="@+id/display1"
        android:layout_width="397dp"
        android:layout_height="64dp"
        android:textColor="@color/white"
        android:textSize="@dimen/greetings_string_size" />


    <EditText
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:id="@+id/display2"
        android:layout_width="397dp"
        android:layout_height="64dp"
        android:textColor="@color/white"
        android:textSize="@dimen/greetings_string_size"
         />

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/Button01"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button04"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button05"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_5"
                android:textSize="30sp" />



            <Button
                android:id="@+id/ButtonPlus"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/plus"
                android:textSize="30sp" />
            <Button
                android:id="@+id/ButtonMinus"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/minus"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/Button06"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button07"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button08"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Button09"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_9"
                android:textSize="30sp" />
            <Button
                android:id="@+id/Button11"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/_0"
                android:textSize="30sp" />
            <Button
                android:id="@+id/ButtonMul"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/multi"
                android:textSize="30sp" />

            <Button
                android:id="@+id/ButtonDivide"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/divide"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="fill_parent"
            android:layout_height="30pt"
            android:gravity="center">

            <Button
                android:id="@+id/Button10"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/point"
                android:textSize="30sp" />



            <Button
                android:id="@+id/Button12"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/button12"
                android:textSize="30sp" />
            <Button
                android:id="@+id/ButtonC"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:text="@string/c"
                android:textColor="#0E9387"
                android:textSize="30sp" />



        </TableRow>

    </TableLayout>
</LinearLayout>




